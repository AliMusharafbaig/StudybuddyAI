# ============================================
# StudyBuddy AI - Environment Configuration
# ============================================

# Application
APP_NAME=StudyBuddy AI
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://studybuddy:studybuddy123@localhost:5432/studybuddy_db
POSTGRES_USER=studybuddy
POSTGRES_PASSWORD=studybuddy123
POSTGRES_DB=studybuddy_db

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=studybuddy_patterns

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,docx,pptx,mp4,mp3,wav,png,jpg,jpeg

# FAISS Index
FAISS_INDEX_DIR=./faiss_indices

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Content Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=10

# Quiz Settings
DEFAULT_QUIZ_SIZE=10
MAX_QUIZ_SIZE=50
DIFFICULTY_LEVELS=easy,medium,hard

# Whisper (Audio Transcription)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
